# Dusty-shock tests with smoothing

{% set prefix = "dustyshock" %}
{% set setup_path = "~/repos/multigrain/code/initial-conditions/dustyshock" %}
{% set runs_path = "~/runs/multigrain/dustyshock" %}
{% set job_script = "~/repos/multigrain/code/misc/dustyshock-slurm.sh" %}

{% set system = "ifort" %}
{% set hdf5_path = env['HDF5_DIR'] %}

{% set names =
    [
        "N_1-nx_32-smooth_fac_2-hfact_1.0",
        "N_1-nx_32-smooth_fac_2-hfact_1.2",
        "N_1-nx_32-smooth_fac_2-hfact_1.5",
        "N_1-nx_32-smooth_fac_5-hfact_1.0",
        "N_1-nx_32-smooth_fac_5-hfact_1.2"
        "N_1-nx_32-smooth_fac_5-hfact_1.5"
        "N_1-nx_128-smooth_fac_2-hfact_1.0",
        "N_1-nx_128-smooth_fac_2-hfact_1.2",
        "N_1-nx_128-smooth_fac_2-hfact_1.5",
        "N_1-nx_128-smooth_fac_5-hfact_1.0",
        "N_1-nx_128-smooth_fac_5-hfact_1.2"
        "N_1-nx_128-smooth_fac_5-hfact_1.5"
    ]
%}


[phantom]
path = "~/repos/phantom"
setup = "dustyshock"
system = "{{ system }}"
version = "666da9e892cb3f2d9f89e132504e185fe2f22f31"
extra_options = ["MAXP=10000000", "ISOTHERMAL=yes"]
hdf5_path = "{{ hdf5_path }}"


{% for name in names %}

[[runs]]
prefix = "{{ prefix }}"
path = "{{ runs_path }}/{{ name }}"
setup_file = "{{ setup_path }}/{{ name }}/{{ prefix }}.setup"
in_file = "{{ setup_path }}/{{ name }}/{{ prefix }}.in"
job_script = "{{ job_script }}"

{% endfor %}
